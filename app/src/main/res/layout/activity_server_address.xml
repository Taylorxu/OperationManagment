<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_server_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wisesignsoft.OperationManagement.mview.MyTitle
        android:id="@+id/mt_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_login_et">

        <EditText
            android:id="@+id/et_server_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/server"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="@color/c3"
            android:textColorHint="@color/c3"
            android:textSize="13sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_server_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shape_login_bt"
        android:text="@string/save"
        android:textColor="@color/c2"
        android:textSize="16sp" />
</LinearLayout>
