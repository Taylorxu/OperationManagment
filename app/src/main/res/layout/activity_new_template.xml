<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wisesignsoft.OperationManagement.mview.MyTitle
        android:id="@+id/mt_new_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.wisesignsoft.OperationManagement.mview.SingleSelectView
        android:layout_margin="20dp"
        android:layout_below="@id/mt_new_template"
        android:id="@+id/ssv_new_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c7" />

        <Button
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round_blue"
            android:text="@string/next"
            android:textColor="@color/c2" />
    </LinearLayout>

</RelativeLayout>
