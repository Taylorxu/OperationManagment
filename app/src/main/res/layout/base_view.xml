<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="42dp">
    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_line" />

    <TextView
        android:id="@+id/tv_base_left"
        style="@style/TitleViewColorSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_tree_selection_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/entity" />

    <TextView
        android:text="请选择"
        android:id="@+id/tv_base_right"
        style="@style/ContentViewColorSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/iv_tree_selection_view"
        android:layout_toRightOf="@id/tv_base_left"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/home_line" />
</RelativeLayout>