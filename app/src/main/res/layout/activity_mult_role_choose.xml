<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mult_role_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wisesignsoft.OperationManagement.mview.MyTitle
        android:id="@+id/mt_mult_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wisesignsoft.OperationManagement.mview.SearchView
        android:layout_below="@id/mt_mult_role"
        android:id="@+id/sv_mult_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_mult_role"
        android:layout_below="@id/sv_mult_role"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_line" />

        <TextView
            android:id="@+id/tv_mult_role_total"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/c5"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_line" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mult_role2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:text="确定"
            android:textColor="@color/c2"
            android:textSize="15sp"
            android:background="@drawable/shape_round_blue"
            android:id="@+id/bt_mult_role"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/ll_mult_role"
        android:layout_above="@id/ll_mult_role2"
        android:id="@+id/rv_mult_role"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
