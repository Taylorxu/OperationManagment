<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_single_user"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.wisesignsoft.OperationManagement.mview.MyTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mt_single_user"/>
<com.wisesignsoft.OperationManagement.mview.SearchView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sv_single_user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="30dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_line"/>
        <TextView
            android:id="@+id/tv_single_user_total"
            android:textSize="14sp"
            android:textColor="@color/c5"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/home_line"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_single_user"/>
</LinearLayout>
